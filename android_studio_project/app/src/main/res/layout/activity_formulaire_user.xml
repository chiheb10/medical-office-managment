<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formulaire_user">

    <EditText
        android:id="@+id/res_firstname"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"

        android:hint="Firstname"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="16dp" />
    <EditText
        android:id="@+id/res_lastname"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_below="@+id/res_firstname"

        android:layout_centerHorizontal="true"


        android:hint="lastname"
         />
    <EditText
        android:id="@+id/res_phone"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_below="@+id/res_lastname"

        android:layout_centerHorizontal="true"
        android:inputType="number"

        android:hint="Phone"
        />
    <EditText
        android:id="@+id/res_age"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_below="@+id/res_phone"
        android:inputType="number"
        android:layout_centerHorizontal="true"


        android:hint="age"
        />
    <EditText
        android:id="@+id/res_username"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_below="@+id/res_age"

        android:layout_centerHorizontal="true"


        android:hint="username"
        />
    <EditText
        android:id="@+id/res_password"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_below="@+id/res_username"

        android:layout_centerHorizontal="true"


        android:hint="password"
        />
    <EditText
        android:id="@+id/res_des"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_below="@+id/res_password"

        android:layout_centerHorizontal="true"


        android:hint="description"
        />

    <Button
        android:id="@+id/res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:layout_marginBottom="87dp"
        android:layout_marginStart="128dp"
        android:text="confirm"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="128dp" />
</RelativeLayout>