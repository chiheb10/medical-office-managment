<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:padding="8dp">

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="delete" />

            <TextView
                android:id="@+id/p_firstname_tt"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="107dp"
                android:layout_toRightOf="@id/delete"
                android:text="       Firstname "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/p_lastname_tt"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_firstname_tt"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:text="       text view"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/p_age_tt"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_lastname_tt"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="4dp"

                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:text="       text view"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/p_gender_tt"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_age_tt"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:text="       text view"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/p_des_tt"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_gender_tt"
                android:layout_marginLeft="109dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"
                android:text="       text view"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/p_phone_tt"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_des_tt"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"
                android:text=" text view"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/p_date_tt"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_phone_tt"
                android:layout_marginStart="81dp"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:text=" text view"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/p_time_tt"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_date_tt"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"
                android:text=" text view"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/p_firstname_tt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="96dp"
                android:layout_marginLeft="96dp"

                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark"

                tools:text="Firstname : " />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/p_gender_tt"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginBottom="25dp"

                android:text="Lastname : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignBottom="@+id/delete"
                android:text="Age : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delete"
                android:layout_alignStart="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="11dp"
                android:text="Gender : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignTop="@+id/p_des_tt"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="-1dp"
                android:text="Description : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignTop="@+id/p_phone_tt"
                android:layout_marginStart="-3dp"
                android:layout_marginLeft="-3dp"
                android:layout_marginTop="1dp"
                android:text="Phone Number : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_phone_tt"
                android:layout_alignStart="@+id/textView"
                android:layout_marginStart="1dp"
                android:layout_marginTop="3dp"
                android:text="Date : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark"
                android:layout_alignLeft="@+id/textView"
                android:layout_marginLeft="1dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignTop="@+id/p_time_tt"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:text="Time : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>