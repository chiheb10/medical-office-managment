<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:padding="8dp">

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:text="delete"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/tvfirstname"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="107dp"
                android:layout_toRightOf="@id/delete"
                android:text="       Firstname "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                android:textColor="@color/violet" />

            <TextView
                android:id="@+id/tvlastname"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvfirstname"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"
                android:text="       text view"
                android:textColor="@color/violet"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"/>

            <TextView
                android:id="@+id/tvusername"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvlastname"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"

                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:text="       text view"
                android:textColor="@color/violet"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"/>

            <TextView
                android:id="@+id/tvpassword"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvusername"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"
                android:text="       text view"
                android:textColor="@color/violet"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip" />

            <TextView
                android:id="@+id/tvaddress"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvpassword"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"
                android:text="       text view"
                android:textColor="@color/violet"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"/>

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvaddress"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/delete"
                android:text=" text view"
                android:textColor="@color/violet"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tvfirstname"
                android:layout_marginLeft="96dp"
                android:layout_marginStart="96dp"

                android:text="Firstname"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Firstname : "

                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvpassword"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="-2dp"

                android:text="Lastname : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark"  />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/delete"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:text="Username : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark"  />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/delete"
                android:text="Password : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark"  />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignTop="@+id/tvaddress"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="-5dp"
                android:text="Address : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignTop="@+id/tvphone"
                android:layout_marginEnd="-25dp"
                android:layout_marginRight="-25dp"
                android:text= "Phone Number : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_red_dark" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>